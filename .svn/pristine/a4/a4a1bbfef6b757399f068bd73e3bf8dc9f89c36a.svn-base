/*
	### Basic Editor IFRAME Styles.
*/
body
{
	padding: 0;/* 1px 1px 1px 1px;*/
	margin: 0px 0px 0px 0px;
}
#eWysiwygCell, .Source
{
	border: #696969 0px solid;
}
#eSourceField
{
	border: none;
	padding: 5px;
	font-family: Monospace;
}
/*
	### Toolbar Styles
*/
.TB_ToolbarSet, .TB_Expand, .TB_Collapse
{
	background-color: #E8EEF5;
}
.TB_Collapse
{
	background-image: url(images/background.gif);
}
.TB_End
{
	display: none;
}
.TB_ExpandImg
{
	background-image: url(images/toolbar.expand.gif);
	background-repeat: no-repeat;
}
.TB_CollapseImg
{
	background-image: url(images/toolbar.collapse.gif);
	background-repeat: no-repeat;
}
.TB_ToolbarSet
{
	border-top: #E8EEF5 0px outset;
	border-bottom: #E8EEF5 0px outset;
}
.TB_SideBorder
{
	background-color: #E8EEF5;
}
.TB_ToolbarSet, .TB_ToolbarSet *
{
//	font-size: 11px;
	cursor: default;
//	font-family: 'Microsoft Sans Serif' , Tahoma, Arial, Verdana, Sans-Serif;
	font: 400 11px/14px verdana, arial, helvetica, sans-serif;
	color: #244E7E;
}
.TB_Expand, .TB_Collapse
{
	padding: 2px 2px 2px 2px;
	border: #E8EEF5 1px outset;
}
.TB_Collapse
{
	border: #E8EEF5 1px outset;
	width: 5px;
}
.TB_Button_On, .TB_Button_Off, .TB_Button_Disabled, .TB_Combo_Off, .TB_Combo_Disabled
{
	border: #E8EEF5 1px solid;
	height: 21px;
}
.TB_Button_On
{
	border-color: #316ac5;
	background-color: #E8EEF5;
}
.TB_Button_Off, .TB_Combo_Off
{
	filter: alpha(opacity=100);
	-moz-opacity: 1.0;
	background-color: #E8EEF5;
}
.TB_Button_Disabled, .TB_Combo_Disabled
{
	filter: gray() alpha(opacity=30);
	-moz-opacity: 0.30;
}
.TB_Button_On_Over, .TB_Button_Off_Over
{
	background-color: #E8EEF5;
}
.TB_Icon DIV
{
	width: 21px;
	height: 21px;
	background-position: 50% 50%;
	background-repeat: no-repeat;
}
.TB_Text
{
	height: 21px;
	padding-right: 5px;
}
.TB_ButtonArrow
{
	padding-right: 3px;
}
.TB_Break
{
	height: 23px;
}
